---
import BlurFade from "@ui/blur-fade";
import Experience from "@/components/ExperienceItem";
import { Accordion } from "@nextui-org/accordion";
interface Props {
  fade_delay: number;
  workExperience: any;
}
const { fade_delay, workExperience } = Astro.props;
---

<section id="work-experience">
  <BlurFade client:visible delay={fade_delay * 5}>
    <h2 class="text-xl font-bold">Work Experience</h2>
  </BlurFade>
  <br />
  <BlurFade client:visible delay={fade_delay * 6}>
    <Experience
      client:load
      workExperience={workExperience}
      fade_delay={fade_delay * 7}
    />
  </BlurFade>
</section>
