---
import BlurFade from "@ui/blur-fade";

import CertCard from "@/components/CertCard";
interface Props {
  fade_delay: number;
  certifications: any;
}
const { fade_delay, certifications } = Astro.props;
---

<section id="certifications">
  <BlurFade client:load delay={fade_delay * 10}>
    <h2 class="text-xl font-bold">Certifications</h2>
  </BlurFade>
  <br />
  <BlurFade client:load delay={fade_delay * 11}>
    <div class="gap-2 grid grid-cols-1 sm:grid-cols-3">
      {
        certifications.map(
          (cert: {
            data: {
              title: string;
              issuer: string;
              logo: { src: string };
              skills: string;
              validationLink: string;
              future: boolean;
              issued?: string;
            };
            body: string;
          }) => (
            <CertCard
              client:load
              title={cert.data.title}
              issuer={cert.data.issuer}
              logo={cert.data.logo.src}
              skills={cert.data.skills}
              body={cert.body}
              validationLink={cert.data.validationLink}
              future={cert.data.future}
              issued={cert.data.issued}
            />
          ),
        )
      }
    </div>
  </BlurFade>
</section>
